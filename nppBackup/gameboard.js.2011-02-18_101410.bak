                supply = tokenSetupXML[j].firstChild.data;
            }
        }
        for (j = 0; j < supply; j++){
            token = {
                draw : drawToken,
                name : tokenName,
                type : "token",
                home : tokenSet[i]
            };
            idString = String(supply + 1);
            idString = (idString.length == 1) ? "0" + idString : idString;
            token.objectID = token.name.substr(0,3) + idString;
